// Tic Tac Toe - Assignment 7 (Apr.2.2025)
import java.util.Scanner;

public class TicTacToe {

    public static void main(String[] args) throws Exception {
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Welcome to Tic Tac Toe!\n");
        System.out.println("To play, enter the row and column number (e.g., 0 1).");

        char[][] grid = new char[3][3];
        for (int row = 0; row < grid.length; row++) {
            for (int col = 0; col < grid[row].length; col++) {
                grid[row][col] = ' ';
            }
        }
        gridPrint(0, 0, grid);
        char currentPlayer = 'X';
    }

    public static void gridPrint(int row, int col, char[][] grid) {
        for (row = 0; row < grid.length; row++) {
            for (col = 0; col < grid[row].length; col++) {
                System.out.print(grid[row][col] + " - ");
                if (col == 2) {
                    System.out.print("\n");

                }
            }
        }
    }

    public static void playerTurn(char currentPlayer) {
        currentPlayer = (currentPlayer == 'X') ? 'O' : 'X';
    }
}

