
// Inheritance and Javadocs - Assignment 11 (Apr.30.2025)

public class Products {

    protected String product;
    protected String brand;
    protected double price;
    protected int quantity;

    public Products(String product, String brand, double price, int quantity) {
        this.product = product;
        this.brand = brand;
        this.price = price;
        this.quantity = quantity;
    }

    // Getters and setters
    protected String getProduct() {
        return product;
    }

    protected String getBrand() {
        return brand;
    }

    protected double getPrice() {
        return price;
    }

    protected int getQuantity() {
        return quantity;
    }

    protected void setProduct(String product) {
        this.product = product;
    }

    protected void setBrand(String brand) {
        this.brand = brand;
    }

    protected void setPrice(double price) {
        this.price = price;
    }

    protected void setQuantity(int quantity) {
        this.quantity = quantity;
    }

    // Methods
    protected void quantity(int amount) {
        quantity += amount;
    }

    protected double subtotal(double subtotal) {
        subtotal = quantity * price;
        return subtotal;
    }

    protected void displayInfo() {
        System.out.println("\nProduct: " + product);
        System.out.println("Brand: " + brand);
        System.out.println("Price/item: $" + price);
        System.out.println("Quantity: " + quantity);
        System.out.println("Subtotal: $" + subtotal());
    }


}
